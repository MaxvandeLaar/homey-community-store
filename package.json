{
  "name": "homey-community-store",
  "productName": "Homey Community Store",
  "version": "0.3.0",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "dist:all": "yarn compile && electron-builder -wlm --x64",
    "dist:mac": "yarn compile && electron-builder -m --x64",
    "dist:win": "yarn compile && electron-builder -w --x64",
    "dist:linux": "yarn compile && electron-builder -l --x64",
    "publish": "build --mac --win --linux -p always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MaxvandeLaar/homey-community-store.git"
  },
  "build": {
    "appId": "com.maxvandelaar.homey-community-store",
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "MaxvandeLaar",
        "repo": "homey-community-store"
      }
    ],
    "mac": {
      "darkModeSupport": true,
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true
    }
  },
  "electronWebpack": {
    "whiteListedModules": [
      "bootstrap-vue"
    ]
  },
  "dependencies": {
    "athom-api": "^3.1.1",
    "aws-sdk": "^2.680.0",
    "babel-runtime": "^6.26.0",
    "bootstrap": "^4.5.0",
    "bootstrap-vue": "^2.14.0",
    "cli-table": "^0.3.1",
    "colors": "^1.1.2",
    "deepmerge": "^2.1.0",
    "electron-log": "^4.1.2",
    "electron-updater": "^4.3.1",
    "express": "^4.16.4",
    "figures": "^2.0.0",
    "filesize": "^3.6.1",
    "fs-extra": "^5.0.0",
    "fuse.js": "^6.0.0",
    "gitignore-parser": "0.0.2",
    "homey": "^2.3.3",
    "homey-lib": "^2.4.9",
    "ignore-walk": "^3.0.3",
    "ini": "^1.3.5",
    "inquirer": "^5.1.0",
    "monitorctrlc": "^2.0.1",
    "node-fetch": "^2.6.0",
    "npm-programmatic": "0.0.10",
    "object-path": "^0.11.4",
    "opn": "^5.4.0",
    "parse-git-config": "^3.0.0",
    "semver": "^5.5.0",
    "semver-compare": "^1.0.0",
    "slash": "^3.0.0",
    "source-map-support": "^0.5.16",
    "tar-fs": "^1.16.0",
    "tmp-promise": "^1.0.4",
    "underscore": "^1.8.3",
    "unzipper": "^0.10.11",
    "upath": "^1.2.0",
    "update-notifier": "^2.3.0",
    "vue": "^2.6.11",
    "vue-i18n": "^8.17.6",
    "vue-markdown": "^2.2.4",
    "vue-notification": "^1.3.20",
    "vue-router": "^3.2.0",
    "vuex": "^3.4.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/electron": "^1.6.10",
    "@types/node": "^12.12.39",
    "@types/node-fetch": "^2.5.7",
    "@types/semver-compare": "^1.0.1",
    "@types/unzipper": "^0.10.3",
    "@types/vue-markdown": "^2.2.1",
    "electron": "8.2.0",
    "electron-builder": "^22.4.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "electron-webpack-vue": "^2.4.0",
    "node-sass": "^4.14.1",
    "sass-loader": "^8.0.2",
    "typescript": "^3.9.2",
    "webpack": "~4.42.1"
  }
}
